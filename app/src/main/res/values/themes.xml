<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ViewSystem" parent="Base.Theme.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:forceDarkAllowed" tools:targetApi="Q">false</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="Q">false</item>

        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
    </style>

    <style name="Theme.ViewSystem" parent="Base.Theme.ViewSystem">
        <item name="colorPrimary">@color/brand_blue</item>
        <item name="colorPrimaryContainer">@color/brand_blue_100</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
        <item name="colorPrimaryDark">@color/brand_blue_700</item>

        <item name="isLightTheme">true</item>
        <item name="android:isLightTheme" tools:targetApi="Q">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="Theme.ViewSystem.Light" parent="Base.Theme.ViewSystem">
        <item name="colorPrimary">@color/brand_blue</item>
        <item name="colorPrimaryContainer">@color/brand_blue_100</item>
        <item name="colorPrimaryDark">@color/brand_blue_700</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnBackground">@color/black</item>

        <item name="isLightTheme">true</item>
        <item name="android:isLightTheme" tools:targetApi="Q">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenBackground">@color/lime_green200</item>
        <item name="postSplashScreenTheme">@style/Theme.ViewSystem</item>
        <item name="isLightTheme">true</item>
        <item name="android:isLightTheme" tools:targetApi="Q">true</item>
    </style>

    <style name="Theme.WebView" parent="Base.Theme.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurfaceVariant">@color/white_grey</item>
        <item name="colorOnSurfaceInverse">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_blue</item>
        <item name="colorSecondaryVariant">@color/brand_blue_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/toolbar_background</item>
        <item name="isLightTheme">true</item>
        <item name="android:isLightTheme" tools:targetApi="q">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Black" parent="Base.Theme.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/material_bluegrey900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_blue</item>
        <item name="colorSecondaryVariant">@color/brand_blue_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowBackground">@color/transparent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/black</item>
        <item name="isLightTheme">false</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
    </style>

    <style name="ThemeOverlay.App.TextBox" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="colorSecondary">@color/core_black</item>
    </style>

    <style name="ThemeOverlay.App.IconButton" parent="ThemeOverlay.Material3.Button.IconButton">
        <item name="colorPrimary">@color/brand_blue</item>
        <item name="android:colorPrimary">@color/brand_blue</item>
        <item name="colorOnPrimary">@color/core_white</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="ThemeOverlay.Material3.Button">
        <item name="colorPrimary">@color/brand_blue</item>
        <item name="android:colorPrimary">@color/brand_blue</item>
        <item name="colorOnPrimary">@color/core_white</item>
    </style>

    <style name="ThemeOverlay.App.Button.Variant" parent="ThemeOverlay.Material3.Button">
        <item name="colorPrimary">@color/brand_blue</item>
        <item name="android:colorPrimary">@color/brand_blue</item>
        <item name="colorOnPrimary">@color/core_black</item>
    </style>

    <style name="ThemeOverlay.App.Button.Alt" parent="ThemeOverlay.Material3.Button">
        <item name="colorContainer">@color/inverse_primary</item>
        <item name="colorOnContainer">@color/primary</item>
    </style>

    <style name="ThemeOverlay.App.FancyButton" parent="ThemeOverlay.Material3.Button">
        <item name="colorPrimary">@color/white</item>
        <item name="android:colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/best_deals_purple</item>
        <item name="android:textAppearanceButton">@style/Base.TextAppearance.SemiBold</item>
        <item name="textAppearanceButton">@style/Base.TextAppearance.SemiBold</item>
    </style>

    <style name="ThemeOverlay.App.Button.TextButton" parent="ThemeOverlay.Material3.Button.TextButton">
        <item name="android:textAppearanceButton">@style/Base.TextAppearance.SemiBold</item>
        <item name="textAppearanceButton">@style/Base.TextAppearance.SemiBold</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.SemiBold</item>
    </style>

    <style name="ThemeOverlay.App.Button.TextButton.Danger" parent="ThemeOverlay.Material3.Button.TextButton">
        <item name="android:textAppearanceButton">@style/Base.TextAppearance.SemiBold</item>
        <item name="textAppearanceButton">@style/Base.TextAppearance.SemiBold</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.SemiBold</item>
        <!--<item name="colorPrimary">@color/purple_500</item>-->
    </style>

    <style name="ThemeOverlay.App.Button.TextButton.Alt" parent="ThemeOverlay.Material3.Button.TextButton">
        <item name="android:textAppearanceButton">@style/Base.TextAppearance.SemiBold</item>
        <item name="textAppearanceButton">@style/Base.TextAppearance.SemiBold</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.SemiBold</item>
        <item name="colorPrimary">@color/core_grey_40</item>
    </style>

    <!-- Chips -->
    <style name="ThemeOverlay.App.Chip.Choice" parent="">
        <!--<item name="colorPrimary">@color/yellow_200</item>-->
