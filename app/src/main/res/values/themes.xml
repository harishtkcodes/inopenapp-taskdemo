    <style name="ThemeOverlay.App.ImageButton" parent="">

    </style>

    <style name="ThemeOverlay.App.Dialog" parent="">
        <item name="colorPrimary">@color/brand_blue</item>
        <item name="colorPrimaryContainer">@color/best_deals_light</item>
        <item name="colorPrimaryDark">@color/brand_blue_700</item>
        <item name="colorSecondary">@color/black</item>

        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnSurfaceInverse">@color/black</item>
    </style>

    <style name="ThemeOverlay.App.MaterialDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <!--<item name="colorPrimary">@color/shrine_pink_100</item>
        <item name="colorSecondary">@color/shrine_pink_100</item>
        <item name="colorSurface">@color/shrine_pink_light</item>
        <item name="colorOnSurface">@color/shrine_pink_900</item>-->

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/black_600</item>
        <item name="colorAccent">@color/black_900</item>
