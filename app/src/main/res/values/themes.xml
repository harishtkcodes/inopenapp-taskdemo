        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.App.Body.Text</item>
        <item name="materialAlertDialogTitleIconStyle">@style/MaterialAlertDialog.App.Icon</item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialAlertDialog.App.Button.Dialog</item>
        <item name="buttonBarNeutralButtonStyle">@style/MaterialAlertDialog.App.Button.Dialog.Neutral</item>

    </style>

    <!-- Progress Indicator -->
    <style name="ThemeOverlay.App.ProgressIndicator" parent="">
        <item name="android:colorPrimary">@color/brand_blue</item>
        <item name="colorPrimary">@color/brand_blue</item>
    </style>

    <!-- ContentLoadingProgress -->
    <style name="ThemeOverlay.App.ContentLoadingProgressBar" parent="">
        <item name="colorAccent">@color/brand_blue</item>
    </style>

    <style name="ThemeOverlay.App.ContentLoadingProgressBar.Alt" parent="">
        <item name="colorAccent">@color/white</item>
    </style>

    <!-- Bottom sheet -->
    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
